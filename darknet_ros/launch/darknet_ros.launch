<?xml version="1.0" encoding="utf-8"?>

<launch>
  <!-- Console launch prefix -->
  <arg name="launch_prefix" default=""/>
  <arg name="image" default="camera/rgb/image_raw" />
  <arg name="namespace" default="/nepi/dev_id/" />

  <!-- Config and weights folder. -->
  <arg name="weights_path"          default="$(find nepi_darknet_ros)/yolo_network_config/weights"/>
  <arg name="config_path"           default="$(find nepi_darknet_ros)/yolo_network_config/cfg"/>
  
  <!-- ROS and network parameter files -->
  <arg name="ros_param_file"             default="$(find nepi_darknet_ros)/config/ros.yaml"/>
  <arg name="network_param_file"         default="$(find nepi_darknet_ros)/config/yolov3-tiny.yaml"/>

  <!-- Input image -->
  <arg name="input_img"                  default="$(arg namespace)/idx/color_2d_image"/>

  <!-- detector threshold -->
  <arg name="detector_threshold"        default="0.3"/>

  <!-- Load parameters -->
  <rosparam command="load" ns="$(arg namespace)/nepi_darknet_ros" file="$(arg ros_param_file)"/>
  <rosparam command="load" ns="$(arg namespace)/nepi_darknet_ros" file="$(arg network_param_file)"/>

  <!-- Start darknet and ros wrapper -->
  <node pkg="nepi_darknet_ros" ns="$(arg namespace)" type="nepi_darknet_ros" name="nepi_darknet_ros" output="screen" launch-prefix="$(arg launch_prefix)">
    <param name="weights_path"          value="$(arg weights_path)" />
    <param name="config_path"           value="$(arg config_path)" />
    <param name="subscribers/camera_reading/topic" value="$(arg input_img)" />
    <param name="yolo_model/threshold/value" value="$(arg detector_threshold)" />
    <param name="publishers/source_image/topic" value="$(arg namespace)/source_image" />
    <param name="publishers/detection_image/topic" value="$(arg namespace)/detection_image" />
    <param name="publishers/object_detector/topic" value="$(arg namespace)/found_object" />
    <param name="publishers/bounding_boxes/topic" value="$(arg namespace)/bounding_boxes" />
    <remap from="camera/rgb/image_raw"  to="$(arg image)" />
  </node>

 <!--<node name="republish" type="republish" pkg="image_transport" output="screen" 	args="compressed in:=/front_camera/image_raw raw out:=/camera/image_raw" /> -->
</launch>
